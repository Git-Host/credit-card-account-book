<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main1"
    android:orientation="horizontal" >

    <!-- For test -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/from_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="27dp"
            android:background="@color/grey"
            android:clickable="true"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:background="@color/grey"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="@string/dash"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/to_date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="27dp"
            android:background="@color/grey"
            android:clickable="true"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#555555"
        android:gravity="left"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="@string/today_payment"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/today_payment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#DDDDDD"
        android:gravity="right"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TableRow>

        <ImageView
            android:id="@+id/my_card_btn"
            style="@style/MainText"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:src="@drawable/my_card" />

        <ImageView
            android:id="@+id/breakdown_stats_btn"
            style="@style/MainText"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:src="@drawable/icon_graph" />

        <ImageView
            android:id="@+id/detail_view_btn"
            style="@style/MainText"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:src="@drawable/icon_detail" />
    </TableRow>

    <TableRow>

        <ImageView
            android:id="@+id/cash_btn"
            style="@style/MainText"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:src="@drawable/icon_cash" />

        <ImageView
            android:id="@+id/notice_btn"
            style="@style/MainText"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:src="@drawable/icon_notice" />

        <ImageView
            android:id="@+id/option_btn"
            style="@style/MainText"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:layout_weight="1"
            android:src="@drawable/icon_option" />
    </TableRow>

</TableLayout>