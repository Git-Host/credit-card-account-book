<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/child_background"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/expandable_child_card_image_view"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:src="@drawable/questionmark_card"
        android:layout_marginLeft="10dp" 
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/expandable_child_card_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/NH_card"
        style="@style/ExpandableChildListText" />

</LinearLayout>