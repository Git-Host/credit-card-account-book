<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.hansung"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!-- Main Activity -->
        <activity
            android:name=".CardAccountBookActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- My Card Activity -->
        <activity
            android:name=".MyCardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MY_CARD" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Detail View Activity -->
        <activity
            android:name=".DetailViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.DETAIL_VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Graph View Activity -->
        <activity android:name=".GraphViewActivity" 
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.GRAPH_VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MonthlyGraphActivity" 
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MONTHLY_GRAPH_VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>