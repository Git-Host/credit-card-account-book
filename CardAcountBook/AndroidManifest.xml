<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.ac.hansung"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
          
		<!-- PassWord Activity -->
		<!--
	 	<activity 
		    android:name=".PasswordActivity"
		    android:theme="@android:style/Theme.Black.NoTitleBar" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		-->
		
        <!-- Main Activity -->
        <activity
            android:name=".CardAccountBookActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- My Card Activity -->
        <activity
            android:name=".MyCardActivity"
            android:label="@string/my_card" >
            <intent-filter>
                <action android:name="android.intent.action.MY_CARD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Detail View Activity -->
        <activity
            android:name=".DetailViewActivity"
            android:label="@string/detail_view" >
            <intent-filter>
                <action android:name="android.intent.action.DETAIL_VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- SMS BroadcastReceiver -->
        <receiver android:name=".SMSReceiver" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- Graph View Activity -->
        <activity
            android:name=".GraphViewActivity"
            android:label="@string/breakdown_stats" >
            <intent-filter>
                <action android:name="android.intent.action.GRAPH_VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MonthlyGraphActivity"
            android:label="@string/monthly_show_text" >
            <intent-filter>
                <action android:name="android.intent.action.MONTHLY_GRAPH_VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryGraphActivity"
            android:label="@string/category_show_text" >
            <intent-filter>
                <action android:name="android.intent.action.CATEGORY_GRAPH_VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Option View Activity -->
        <activity
            android:name=".OptionViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.OPTION_VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Card Info Edit Activity -->
        <activity
            android:name=".CardInfoEditActivity"
            android:label="@string/edit_my_card" >
            <intent-filter>
                <action android:name="android.intent.action.CARD_INFO_EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
      
        <activity android:name=".CardListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.CARD_LIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Expandable Card List Activity -->
        <activity android:name="CardExpandableListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.EXPANDABLE_CARD_LIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="kr.ac.hansung.WRITE_DATA" />
    <uses-permission android:name="kr.ac.hansung.READ_DATA" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCOUNT_MANAGER" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_OWNER_DATA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>