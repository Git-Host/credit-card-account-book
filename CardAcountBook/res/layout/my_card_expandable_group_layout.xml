<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/expandable_group_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="20dp" >

    <TextView
        android:id="@+id/expandable_group_card_name_view"
        style="@style/ExpandableGroupListText"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="12"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="@string/NH_card" />

    <ImageView
        android:id="@+id/expandable_group_arrow_image_view"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:src="@drawable/expandable_group_arrow_down"
        android:layout_marginRight="20dp" />

</LinearLayout>